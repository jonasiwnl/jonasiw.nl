---
import Layout from "./Layout.astro";

export interface Props {
	title: string;
    date: string;
}

const { title, date } = Astro.props;
---

<Layout title={title}>
    <main>

	<div class="m-auto">
        <p class="text-xl my-6 mx-1"><a href="/blog">&#x2190; Back</a></p>
        <h1 class="text-2xl underline mb-2">{title}</h1>
        <h2>{date}</h2>
        <slot />
	</div>
    <div class="text-right my-10 header">
        <a href="#">Back to top &#x2191;</a>
    </div>
    </main>
</Layout>
